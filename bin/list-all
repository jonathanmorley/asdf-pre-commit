#!/usr/bin/env bash

set -Eeuo pipefail

# See https://github.com/asdf-vm/asdf/blob/master/docs/plugins-create.md#github-api-rate-limiting
function fetch() {
  if [[ -v GITHUB_API_TOKEN ]]; then
    curl -sL "-H 'Authorization: token ${GITHUB_API_TOKEN}'" "$@"
  else
    curl -sL "$@"
  fi
}

fetch "https://api.github.com/repos/pre-commit/pre-commit/releases" |
  grep -Eo '"tag_name":\s*"[^"]+"' |
  cut -d\" -f4 |
  cut -c2- |
  sort --version-sort
