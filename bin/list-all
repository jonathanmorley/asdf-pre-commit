#!/usr/bin/env bash

set -Eeuo pipefail

# See https://github.com/asdf-vm/asdf/blob/master/docs/plugins-create.md#github-api-rate-limiting
function fetch() {
  curl -Ls ${GITHUB_API_TOKEN:+-H "Authorization: token ${GITHUB_API_TOKEN}"} "$@"
}

fetch "https://api.github.com/repos/pre-commit/pre-commit/releases" |
  grep -Eo '"tag_name":\s*"[^"]+"' |
  cut -d\" -f4 |
  cut -c2- |
  sort --version-sort
